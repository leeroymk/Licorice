    "version": "0.2.0",
    "configurations": [
        {
            "name": "Запуск с флагом -m",
            "type": "debugpy",
            "request": "launch",
            "module": "app.main",
            "justMyCode": false,
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ]
        }
    ]
}
